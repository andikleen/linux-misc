/dts-v1/;
#include "imx27.dtsi"

/ {
	model = "Phytec pca100";
	compatible = "phytec,imx27-pca100", "fsl,imx27";

	memory {
		reg = <0xa0000000 0x08000000>; /* 128MB */
	};
};

&cspi1 {
	fsl,spi-num-chipselects = <2>;
	cs-gpios = <&gpio4 28 0>,
		<&gpio4 27 0>;
	status = "okay";
};

&fec {
	status = "okay";
};

&i2c2 {
	status = "okay";

	at24@52 {
		compatible = "at,24c32";
		pagesize = <32>;
		reg = <0x52>;
	};
};
